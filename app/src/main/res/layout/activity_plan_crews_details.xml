<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".PlanCrewsDetailsActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <TableLayout
            android:id="@+id/listevendetail"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingTop="16dp">
            <TableRow
                android:paddingTop="12dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:paddingBottom="8dp"
                android:gravity="right">
                <TextView
                    android:text="Event Details"
                    android:layout_gravity="right"/>
            </TableRow>
            <TableRow
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp">
                <TextView
                    android:text="Event"
                    android:layout_weight="1"
                    android:textSize="8pt"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp" />
                <TextView
                    android:id="@+id/txt_detail_name_event_plan_crew"
                    android:layout_weight="2"
                    android:textSize="8pt"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"/>
            </TableRow>
            <TableRow
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp">
                <TextView
                    android:text="Date"
                    android:layout_weight="1"
                    android:textSize="8pt"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp" />
                <TextView
                    android:id="@+id/txt_detail_date_event_plan_crew"
                    android:layout_weight="2"
                    android:textSize="8pt"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"/>
            </TableRow>
            <TableRow
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp">
                <TextView
                    android:text="Time Start"
                    android:layout_weight="1"
                    android:textSize="8pt"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp" />
                <TextView
                    android:id="@+id/txt_detail_time_start_event_plan_crew"
                    android:layout_weight="2"
                    android:textSize="8pt"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"/>
            </TableRow>
            <TableRow
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp">
                <TextView
                    android:text="Time End"
                    android:layout_weight="1"
                    android:textSize="8pt"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp" />
                <TextView
                    android:id="@+id/txt_detail_time_end_event_plan_crew"
                    android:layout_weight="2"
                    android:textSize="8pt"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"/>
            </TableRow>
            <TableRow
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp">
                <TextView
                    android:text="Chief On Duty"
                    android:layout_weight="1"
                    android:textSize="8pt"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp" />
                <TextView
                    android:id="@+id/txt_detail_cod_event_plan_crew"
                    android:layout_weight="2"
                    android:textSize="8pt"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"/>
            </TableRow>
            <TableRow
                android:paddingTop="12dp"
                android:paddingBottom="8dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:gravity="right">
                    <TextView
                        android:text="Crews"
                        android:layout_gravity="right"/>
            </TableRow>
        </TableLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_below="@+id/listevendetail"
                android:id="@+id/recycler_list_crew_plan_crew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recycler_list_crew_plan_crew"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp">
            <TableRow>
                <Button
                    android:padding="2dp"
                    android:id="@+id/save_event_plan_crew"
                    android:text="Save"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <Button
                    android:padding="2dp"
                    android:id="@+id/delete_event_plan_crew"
                    android:text="cancel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </TableRow>
        </TableLayout>
    </RelativeLayout>
</ScrollView>