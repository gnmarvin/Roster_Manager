<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_item_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true">
        <LinearLayout
            android:id="@+id/linear_plan_event"
            android:layout_width="match_parent"
            android:padding="12dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="4dp">
                <TableRow
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">
                    <!--TextView Name -->
                    <TextView
                        android:id="@+id/txt_name_event_plan_event"
                        android:textSize="12pt"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="event" />
                </TableRow>
                <TableRow
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">
                    <!--TextView Date -->
                    <TextView
                        android:id="@+id/txt_date_plan_event"
                        android:textSize="8pt"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="date"/>
                </TableRow>
                <TableRow
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">
                    <!--TextView Time -->
                    <TextView
                        android:textSize="8pt"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="start"/>
                    <TextView
                        android:id="@+id/txt_time_start_plan_event"
                        android:textSize="8pt"
                        android:layout_width="match_parent"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="shift/time"/>
                    <TextView
                        android:textSize="8pt"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="end"/>
                    <TextView
                        android:id="@+id/txt_time_end_plan_event"
                        android:textSize="8pt"
                        android:layout_width="match_parent"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="shift/time"/>
                </TableRow>
                <TableRow
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">
                    <!--TextView COD -->
                    <TextView
                        android:id="@+id/txt_cod_plan_event"
                        android:textSize="8pt"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="COD"/>
                </TableRow>
                <TableRow
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">
                    <!--TextView Photo Respond -->
                    <TextView
                        android:id="@+id/txt_photo_plan_event"
                        android:textSize="8pt"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="Photographers"/>
                    <TextView
                        android:id="@+id/txt_photo_team_plan_event"
                        android:textSize="8pt"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Team"/>
                    <TextView
                        android:id="@+id/txt_photo_respond_plan_event"
                        android:textSize="8pt"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Respond"/>
                </TableRow>
                <TableRow
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">
                    <!--TextView Campers Respond -->
                    <TextView
                        android:id="@+id/txt_campers_plan_event"
                        android:textSize="8pt"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="Campers"/>
                    <TextView
                        android:id="@+id/txt_campers_team_plan_event"
                        android:textSize="8pt"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Team"/>
                    <TextView
                        android:id="@+id/txt_campers_respond_plan_event"
                        android:textSize="8pt"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Respond"/>
                </TableRow>
                <TableRow
                    android:paddingTop="4dp">
                    <Button
                        android:id="@+id/lock_plan_event"
                        android:text="lock"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/unlock_plan_event"
                        android:text="unlock"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/delete_plan_event"
                        android:text="delete"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>