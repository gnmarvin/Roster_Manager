<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_item_event"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal">
    <LinearLayout
        android:id="@+id/linear_list_crew_plan_crew"
        android:layout_width="match_parent"
        android:padding="4dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="4dp">
            <TableRow
                android:paddingTop="4dp"
                android:paddingBottom="4dp">
                <!--TextView Name -->
                <TextView
                    android:id="@+id/txt_crew_name_list_crew_plan_crew"
                    android:textSize="8pt"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </TableRow>
            <TableRow
                android:paddingTop="4dp"
                android:paddingBottom="4dp">
                <TextView
                    android:id="@+id/txt_position_list_crew_plan_crew"
                    android:textSize="8pt"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txt_team_list_crew_plan_crew"
                    android:textSize="8pt"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txt_respond_list_crew_plan_crew"
                    android:textSize="8pt"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>